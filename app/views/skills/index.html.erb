


<div class="container">
<h1>Available Skills</h1>

<div>
  <form method="get">
    <input name="q" value="<%= @search %>">
    <input type="submit">
  </form>
</div>


  <!-- Main Row Wrapper for the Cards -->
  <div class="row">
    <% @skills.each do |skill| %>
      <!-- Each Skill Card Column (4 columns per row on large screens) -->
      <div class="col-12 col-md-6 col-lg-3 mb-4">
        <div class="card h-100">
          <!-- Skill Image -->
          <% if skill.photo.attached? %>
            <%= cl_image_tag skill.photo.key, class: "card-img-top" %>
          <% else %>
            <img src="https://via.placeholder.com/300x200" alt="No image available" class="card-img-top" />
          <% end %>

          <!-- Skill Information -->
          <div class="card-body">
            <h5 class="card-title"><%= link_to skill.title, skill_path(skill) %></h5>
            <p class="card-text"><%= skill.description %></p>
          </div>

          <!-- Price in the Footer -->
          <div class="card-footer">
            <small class="text-muted">Price: <%= number_to_currency(skill.price, unit: "Â£") %></small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
