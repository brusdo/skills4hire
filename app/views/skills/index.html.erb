<h1>Available Skills</h1>

<form method="get">
  <input name="q" value="<%= @search %>">
  <input type="submit">
</form>

<ul>
  <% @skills.each do |skill| %>
    <li>
      <h3><%= link_to skill.title, skill_path(skill) %></h3>
      <p><%= skill.description %></p>
      <p>Price: <%= number_to_currency(skill.price, :unit => "Â£") %></p>
    </li>
  <% end %>
</ul>
