<div class="container">
  <h1>Hello <%= @user.name %></h1>


  <h2>My skills:</h2>
  <div class="row">
    <% @my_skills.each do |skill| %>
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <div class="card">
        <!-- Skill Image -->
        <% if skill.photo.attached? %>
          <%= cl_image_tag skill.photo.key, class: "card-img-top" %>
        <% else %>
          <img src="https://via.placeholder.com/300x200" alt="No image available" class="card-img-top" />
        <% end %>
        <!-- Skill Information -->
        <div class="card-details">
          <h5 class="card-title"><%= link_to skill.title, skill_path(skill) %></h5>
          <div class="card-body">
            <p>Description: <%= skill.description %></p>
          </div>
        </div>
        <!-- Price in the Footer -->
      </div>
    </div>
    <% end %>
  </div>

  <h2>My Bookings</h2>

  <div class="row">
    <% @my_bookings.each do |booking| %>
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <div class="card">
        <!-- Skill Image -->
        <% if booking.skill.photo.attached? %>
          <%= cl_image_tag booking.skill.photo.key, class: "card-img-top" %>
        <% else %>
          <img src="https://via.placeholder.com/300x200" alt="No image available" class="card-img-top" />
        <% end %>
        <!-- Skill Information -->
        <div class="card-details">
          <h5 class="card-title"><%= link_to booking.skill.title, skill_path(booking.skill) %></h5>
          <div class="card-body">
            <p>Message: <%= booking.message %></p>
            <p>Date: <%= booking.date %></p>
            <p>Status: <%= booking.status %></p>
          </div>
        </div>
        <!-- Price in the Footer -->
        <div class="card-footer">
          <%= link_to "Delete Booking", booking_path(booking), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <h2>My Requests</h2>
    <div class="row">
    <% @my_requests.each do |booking| %>
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <div class="card">
        <!-- Skill Image -->
        <% if booking.skill.photo.attached? %>
          <%= cl_image_tag booking.skill.photo.key, class: "card-img-top" %>
        <% else %>
          <img src="https://via.placeholder.com/300x200" alt="No image available" class="card-img-top" />
        <% end %>
        <!-- Skill Information -->
        <div class="card-details">
          <h5 class="card-title"><%= link_to booking.skill.title, skill_path(booking.skill) %></h5>
          <div class="card-body">
            <p>Message: <%= booking.message %></p>
            <p>Date: <%= booking.date %></p>
            <p>Status: <%= booking.status %></p>
            <p>Name: <%= booking.user.name %></p>
          </div>
        </div>
        <!-- Price in the Footer -->
        <div class="card-footer">
          <%= link_to "Accept", "bookings/#{booking.id}/accept", class: "btn btn-success", data: { turbo_method: :patch } %>
        <%= link_to "Reject", "bookings/#{booking.id}/decline", class: "btn btn-danger", data: { turbo_method: :patch } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
